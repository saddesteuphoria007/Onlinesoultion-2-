<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:ignore="HardcodedText"
        android:src="@drawable/snack3"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/snackName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simba Chips"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/snackPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: R11.00"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/snack4"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/snackName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lays snacks"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/snackPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: 12.00"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/snack5"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/snackName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choco Muffin"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/snackPrice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: R10.00"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <!-- RecyclerView for the cart items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

</LinearLayout>